/* 第一部分 */
swiper{
  height: 332rpx;
  width:710rpx;
  border-radius: 10rpx;
  margin-left:22rpx;
  margin-top:25rpx;
  overflow:hidden;  /* 让照片循环的时候不变成直角 */
}
swiper .wx-swiper-dots.wx-swiper-dots-horizontal{
     margin-bottom: 10rpx; 
}
swiper .wx-swiper-dot{
    width:9rpx;
    display: inline-flex;
    height: 9rpx;
    margin-left: 0.5rpx;
    justify-content:space-between;
}
swiper .wx-swiper-dot::before{
    content: '';
    flex-grow: 10;
    background:white;
    border-radius: 10rpx;
}
swiper .wx-swiper-dot-active::before{
    background:white;  
    opacity: 0.6;
}
