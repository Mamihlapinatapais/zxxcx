/* header */
.header{
    height: 358rpx;
    background-color: #65C2E5;
}
/* 空 */
.header .box1{
    height: 72rpx;
}
/* title */
.header .title{
    font-size: 40rpx;
    color: #ffffff;
    display: flex;
    flex-direction: row;
    justify-content: center
}
/* 空 */
.header .box2{
    height: 54rpx;
}
/* 面试时间 */
.header .time{
    font-size: 20rpx;
    color: #ffffff;
    display: flex;
    flex-direction: row;
    justify-content: center
}
/* trunk */
.trunk{
    height: 222rpx;
    position: relative;

}
/* bigbox */
.trunk .bigbox{
    position: absolute;
    top : -122rpx;
    left: 20rpx;
    border-radius: 10rpx;
    height: 314rpx;
    width: 710rpx;
    background-color: #ffffff;
}
/* 选择面试时间 */
.trunk .bigbox .selecttime{
    margin-top: 28rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    font-size: 24rpx;
    color: #222222;
}
/* 提交按钮 */
.button{
    line-height: 84rpx;
    height: 84rpx;
    width: 710rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    border-radius: 42rpx;
    /* background-color:#52A9DA; */
    background: linear-gradient(to right, #49ADD6, #7A94ED);
    font-size: 30rpx;
    color: #fff;
}
.button-hover{
    opacity: 0.9;
}