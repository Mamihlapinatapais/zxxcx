.superbox1{
    width: 710rpx;
    height: 874rpx;
    margin: 20rpx 20rpx 30rpx 20rpx;
    border-radius: 10rpx;
    background-color: #fff;
}
.superbox1 .box1{
    height: 226rpx;
}
.superbox1 .pass{
    display: flex;
    flex-direction: row;
    justify-content: center;
}
.superbox1 .pass image{
    height: 221rpx;
    width: 165rpx;
}
.superbox1 .txt1{
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items : center;
    height: 72rpx;
    font-size: 40rpx;
    color: #54AA38;
}
.superbox1 .box2{
    height: 118rpx;
}
.superbox1 .avatar{
    display: flex;
    justify-content: center;
}
.superbox1 .avatar image{
    width: 124rpx;
    height: 124rpx;
    border-radius: 50%;
}
.superbox1 .txt2{
    height: 62rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
    font-size: 24rpx;
    color: #353535;
    
}
.share .button{
    line-height: 84rpx;
    height: 84rpx;
    width: 710rpx;
    margin-top: 30rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    border-radius: 42rpx;
    /* background-color:#52A9DA; */
    background: linear-gradient(to right, #49ADD6, #7A94ED);
    font-size: 30rpx;
    color: #fff;
}
.share .button-hover{
    opacity: 0.9;
}
.click_copy{
    margin: 56rpx 20rpx 0 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
.click_copy .leftinfo{
    display: flex;
    flex-direction: row;
}
.click_copy .txt3{
    font-size: 20rpx;
    color: #888888;
}
.click_copy .txt4{
    font-size: 20rpx;
    color: #4783B5;
}
.click_copy .group_number{
    color: #4783B5;
    font-size: 24rpx;
}
.click_copy .txt5{
    color: #ED2424;
    font-size: 20rpx;
    font-weight: 380;
}
.click_copy .copy{
    font-size: 24rpx;
    color: #4783B5;
}
