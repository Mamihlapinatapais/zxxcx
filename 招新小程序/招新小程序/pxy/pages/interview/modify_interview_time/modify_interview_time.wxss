.main{
    height: 100vh;
    width: 100vw;
    position: relative;
}
/* header */
.header{
    height: 358rpx;
    background-color: #65C2E5;
}
/* 空 */
.header .box1{
    height: 72rpx;
}
/* title */
.header .title{
    font-size: 40rpx;
    color: #ffffff;
    display: flex;
    flex-direction: row;
    justify-content: center
}
/* 空 */
.header .box2{
    height: 54rpx;
}
/* 面试时间 */
.header .time{
    font-size: 20rpx;
    color: #ffffff;
    display: flex;
    flex-direction: row;
    justify-content: center
}

/* trunk */
.trunk{
    height: 192rpx;
    position: relative;

}
/* bigbox */
.trunk .bigbox{
    position: absolute;
    top : -122rpx;
    left: 20rpx;
    border-radius: 10rpx;
    height: 314rpx;
    width: 710rpx;
    background-color: #ffffff;
}
/* 选择面试时间 */
.trunk .bigbox .selecttime{
    margin-top: 28rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    font-size: 24rpx;
    color: #222222;
}
/* 提示 */
.txt{
    margin-top: 30rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    font-size: 20rpx;
    color: #4783B5;
}
/* 重新提交 */
.button{
    position: absolute;
    line-height: 84rpx;
    height: 84rpx;
    width: 710rpx;
    border-radius: 42rpx;
    bottom: 30rpx;
    left: 20rpx;
    background-color:#FFFFFF;
    font-size: 30rpx;
    color: #4783B5;
}
.button::after{
    border: none; 
}
.button-hover{
    opacity: 0.9;
}