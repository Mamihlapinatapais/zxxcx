/* pages//* pages/myPage/myInfo/myInfo.wxss */

/*导航栏*/
page {
  height: 100%;
}
.Box {
  margin-top: 25rpx;
}
/* 保存按钮 */
.saveBox {
  display: flex;
  margin: auto;
  margin-top: 25rpx;
  margin-bottom: 25rpx;
  height: 85rpx;
  width: 700rpx;
  background-color: f6f6f6;
}
.right {
  background-color: white;
  height: 100%;
  width: 85rpx;
  border-top-right-radius: 100%;
  border-bottom-right-radius: 100%;
}
.left {
  background-color: white;
  border-top-left-radius: 100%;
  border-bottom-left-radius: 100%;
  height: 100%;
  width: 85rpx;
}
.medium {
  color: #4783b5;
  background-color: white;
  height: 100%;
  width: 640rpx;
  border-radius: 100rpx;
}
.medium::after {
  border: none;
}
/* 必填标志 */
.section211 {
  float: left;
  margin-top: 5rpx;
  color: red;
  width: 28rpx;
  height: 28rpx;
}
/* 头像 */
.avatarBox {
  width: 100%;
  height: 88rpx;
  background-color: white;
  display: flex;
  justify-content: space-between;
}
.avatar {
  margin: 0 auto;
  margin-right: 30rpx;
  width: 70rpx;
  height: 70rpx;
}
/* 小箭头 */
.more {
  margin-right: 30rpx;
  width: 10rpx;
  height: 20rpx;
}
.r-avatar {
  display: flex;
  align-items: center;
}
.l-avatar {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  font-size: 30rpx;
}
/* 内容 */
.detail {
  margin-right: 30rpx;
  font-size: 30rpx;
  color: #888;
}
/* 点击 */
.hover {
  background-color: #bfc0c0;
  opacity: 0.9;
}
.bug{
  margin-top: 20rpx;
}
.test{
  background-color: blue;
  height: 100rpx;
  
}
